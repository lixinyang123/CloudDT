@page "/Overview"
@inherits CloudDT.Pages.Overview

<style>
    article {
        height: calc(100vh - 45px);
        width: 100%;
    }
</style>

<Pivot AriaLabel="CloudDT" @bind-SelectedKey=SelectedKey>

    <PivotItem HeaderText="Borad" ItemKey="Borad" />

    <PivotItem HeaderText="Editor" ItemKey="Editor" />
    
    <PivotItem HeaderText="Console" ItemKey="Console" />

    <PivotItem HeaderText="CloudShell" ItemKey="CloudShell" />

    <PivotItem HeaderText="Others" ItemKey="Others" />

</Pivot>

@switch (SelectedKey)
{
    case "Borad":
        <article>
            <CloudDT.Shared.Components.Borad />
        </article>
        break;

    case "Editor":
        <article>
            <CloudDT.Shared.Components.Editor />
        </article>
        break;

    case "Console":
        <article>
            <CloudDT.Shared.Components.Console />
        </article>
        break;

    case "CloudShell":
        <article>
            <CloudDT.Shared.Components.CloudShell />
        </article>
        break;

    case "Others":
        <article>
            <Label>Others</Label>
        </article>
        break;

    default:
        break;
}