@page "/Overview"
@inherits CloudDT.Pages.Overview

<Pivot AriaLabel="CloudDT" @bind-SelectedKey=SelectedKey>

    <PivotItem HeaderText="Board" ItemKey="Board" />

    <PivotItem HeaderText="Editor" ItemKey="Editor" />
    
    <PivotItem HeaderText="Console" ItemKey="Console" />

</Pivot>

@switch (SelectedKey)
{
    case "Board":
        <article>
            <CloudDT.Shared.Components.Board />
        </article>
        break;

    case "Editor":
        <article>
            <CloudDT.Shared.Components.Editor />
        </article>
        break;

    case "Console":
        <article>
            <CloudDT.Shared.Components.Console />
        </article>
        break;

    default:
        break;
}