@page "/"
@inherits CodeMaker.Pages.Index

<div class="container-fuild">

    <div class="row m-0" style="height: 100vh;">
        <div class="col-lg-8" style="background-image: url(https://cn.bing.com//th?id=OHR.OlympicCoast_ZH-CN0827844876_1920x1080.jpg&rf=LaDigue_1920x1080.jpg&pid=hp);"></div>

        <div class="col-lg-4">
            <Stack VerticalAlign=@(Alignment.Center) HorizontalAlign=@(Alignment.Center) VerticalFill=true>
                <Stack Tokens=@(new StackTokens { Padding = "20px" })>
                    <h2>CodeMaker</h2>
                </Stack>

                <Stack Horizontal=true Tokens=@(new StackTokens { ChildrenGap = new[] { 10.0 }, Padding = "10px" })>
                    <Label>Username</Label>
                    <TextField @bind-Value="@Username"/>
                </Stack>

                <Stack Horizontal=true Tokens=@(new StackTokens { ChildrenGap = new[] { 10.0 }, Padding = "10px" })>
                    <Label>Password</Label>
                    <TextField @bind-Value="@Password"/>
                </Stack>

                <Stack Horizontal="true" Tokens=@(new StackTokens { ChildrenGap = new[] { 10.0 }, Padding = "10px" })>
                    <DefaultButton OnClick="@Login" Text="SignUp"/>
                    <PrimaryButton OnClick="@Login" Text="SignIn"/>
                </Stack>

                <Stack Tokens=@(new StackTokens { Padding = "20px" })>
                    <Checkbox Label="Remember"/>
                </Stack>
            </Stack>
        </div>
    </div>
</div>